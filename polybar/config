[colors]
background = #d9d7ce
background-alt = #00000000
foreground = #212733
gray = #738699
primary = #ff6a00
secondary = #73d0ff
battery = #a37acc
volume = #f07178
wlan = #4cbf99
alert = #ff3333
battery-alert = #ffa500
battery-low = #ff3333
battery-medium = #feff00
battery-high = #1de000

[settings]
compositing-background = over
compositing-foreground = source

[global/wm]
margin-bottom = 0

[bar/top]
width = 1900
height = 20
offset-x = 10
offset-y = 0

background = ${colors.background-alt}
foreground = ${colors.foreground}

line-size = 2

padding-left = 0
padding-right = 0

wm-restack = bspwm
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

module-margin-left = 2
module-margin-right = 0

font-0 = nerdypepper scientifica:style=Regular;2
font-1 = Wuncon Siji:style=Regular;2

modules-left = powermenu bspwm xwindow
modules-center =
modules-right = wlan volume battery date


[module/powermenu]
type = custom/menu
format-foreground = ${colors.background}
label-open = "  "
label-open-font = 2
label-open-background = ${colors.alert}
label-close = "  "
label-close-background = ${colors.alert}
label-separator = " "

menu-0-0 = " Reboot "
menu-0-0-exec = systemctl reboot
menu-0-0-background = ${colors.alert}
menu-0-1 = " Power Off "
menu-0-1-exec = systemctl poweroff
menu-0-1-background = ${colors.alert}

[module/bspwm]
type = internal/bspwm

label-focused = " %index% "
label-focused-foreground = ${colors.background}
label-focused-background = ${colors.primary}

label-urgent= " %index% "
label-urgent-foreground = ${colors.primary}
label-urgent-background = ${colors.alert}

label-empty= " %index% "
label-empty-foreground = ${colors.foreground}
label-empty-background = ${colors.background}

label-occupied= " %index% "
label-occupied-foreground = ${colors.foreground}
label-occupied-background = ${colors.background}
label-occupied-overline = ${colors.primary}
label-occupied-underline = ${colors.primary}

[module/xwindow]
type = internal/xwindow
format-foreground = ${colors.background}
label = "%{R} %title% %{R}"

[module/date]
type = internal/date
interval = 1
format-background = ${colors.background}

date = "%B %d, %Y"
time = "%H:%M"

label = " %date% | %time% "

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-full = "<ramp-capacity><label-full>"
label-full = " %percentage% "
label-full-background = ${colors.background}

format-discharging = "<ramp-capacity><label-discharging>"
label-discharging = " %percentage% "
label-discharging-background = ${colors.background}

format-charging = "<animation-charging><label-charging>"
label-charging = " %percentage% "
label-charging-background = ${colors.background}

; 0xe242 to 0xe24b
ramp-capacity-0 = "  "
ramp-capacity-1 = "  "
ramp-capacity-2 = "  "
ramp-capacity-3 = "  "
ramp-capacity-4 = "  "
ramp-capacity-5 = "  "
ramp-capacity-6 = "  "
ramp-capacity-7 = "  "
ramp-capacity-8 = "  "
ramp-capacity-9 = "  "

; 0xe242 to 0xe24b
animation-charging-0 = "  "
animation-charging-1 = "  "
animation-charging-2 = "  "
animation-charging-3 = "  "
animation-charging-4 = "  "
animation-charging-5 = "  "
animation-charging-6 = "  "
animation-charging-7 = "  "
animation-charging-8 = "  "
animation-charging-9 = "  "
animation-charging-10 = "  "
animation-charging-framerate = 150

ramp-capacity-background = ${colors.battery}
animation-charging-background = ${colors.battery}

[module/volume]
type = internal/alsa

format-volume = "<ramp-volume><label-volume>"
format-muted = "<bar-volume><label-muted>"

label-volume = " %percentage% "
label-volume-background = ${colors.background}

; e04f
label-muted = " %percentage% "
label-muted-foreground = ${colors.gray}
label-muted-background = ${colors.background}

; e04e and e050
ramp-volume-0 = "  "
ramp-volume-1 = "  "
ramp-volume-background = ${colors.volume}

bar-volume-indicator-background = ${colors.volume}
bar-volume-format = %fill%%indicator%%empty%
bar-volume-indicator = "  "
bar-volume-width = 1
bar-volume-fill = x
bar-volume-empty = x

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = "<ramp-signal><label-connected>"
label-connected = " %essid% "
label-connected-background = ${colors.background}

ramp-signal-background = ${colors.wlan}
; e047 to e048
ramp-signal-0 = "  "

format-disconnected =
